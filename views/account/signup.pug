block content
  html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
    link(rel='stylesheet', href='css/style.css')
    link(rel='stylesheet', type='text/css', href='css/launch_main.css')
    link(rel='stylesheet', type='text/css', href='css/launch_devices.css')
  body
    #signup.footer
      .container-sml.text-center
        .col-12
          #prices.heading
            | QuickShifts
          #signup.subheading
            | Create an online schedule for your team
          br
          br
  .container
    form.form-horizontal(id='signup-form', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      br
      br
      #signup-form.form-group.radio
        #signup.label.col-sm-4.control-label(for='account_type') I am a scheduler:
        .col-sm-3
          input(type='radio', name='radio1', id='radio1', value='schedule_type', required)
          br
      #signup-form.form-group.radio
        #signup.label.col-sm-4.control-label(for='account_type') I am an employee:
        .col-sm-3
          input(type='radio', name='radio1', id='radio1', value='employee_type',required)

      br

      .form-group
        #signup.label.col-sm-4.control-label(for='email') Email
        .col-sm-7
          input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
      .form-group
        #signup.label.col-sm-4.control-label(for='password') Password
        .col-sm-7
          input.form-control(type='password', name='password', id='password', placeholder='Password', required)
      .form-group
        #signup.label.col-sm-4.control-label(for='confirmPassword') Confirm Password
        .col-sm-7
          input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password', required)
      .form-group
        .col-sm-offset-6.col-sm-9
          br
          button.btn.btn-success(type='submit')
            i.fa.fa-user-plus
            | Signup
      br
      br
      br
